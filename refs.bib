	month = dec,
	year = {2011},
	keywords = {Angiosperms, Animals, Bees, Bees: genetics, Bees: physiology, Biological Evolution, {DNA}, Feeding Behavior, Genes, Insect, Molecular Sequence Data, Nesting Behavior, phylogeny, Pollen, Sequence Analysis},
	pages = {3593--3600},
	file = {Attachment:/home/carlosp420/.zotero/zotero/84ce2kbp.default/zotero/storage/I6IHA68T/Litman_etal_2011prsl.pdf:application/pdf;Attachment:/home/carlosp420/.zotero/zotero/84ce2kbp.default/zotero/storage/8PQR64MP/Litman_etal_2011prsl.pdf:application/pdf}
